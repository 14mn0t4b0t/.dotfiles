[manager]
[[manager.prepend_keymap]]
on   = [ "g", "d" ]
run  = "cd ~/Downloads"
desc = "~/Downloads"

# Acceso directo a Desktop
[[manager.prepend_keymap]]
on   = [ "g", "w" ]
run  = "cd ~/Desktop"
desc = "~/Desktop"

# Acceso directo a Documents
[[manager.prepend_keymap]]
on   = [ "g", "o" ]
run  = "cd ~/Documents"
desc = "~/Documents"

[[manager.prepend_keymap]]
on   = [ "g", "p" ]
run  = "cd ~/Pictures"
desc = "~/Pictures"

# Acceso directo a la papelera
[[manager.prepend_keymap]]
on   = [ "g", "t" ]
run  = "cd ~/.local/share/Trash/files"
desc = "Go to Trash"

# Acceso directo a discos montados
[[manager.prepend_keymap]]
on   = [ "g", "u" ]
run  = "cd /run/media/$USER"
desc = "mounted disks"

# Acceso directo a montajes mnt
[[manager.prepend_keymap]]
on   = [ "g", "m" ]
run  = "cd /mnt/"
desc = "/mnt"

# Acceso directo a scripts
[[manager.prepend_keymap]]
on   = [ "g", "s" ]
run  = "cd ~/.config/scripts"
desc = "Go to scripts"

# File manager grafico
[[manager.prepend_keymap]]
on   = [ "g", "v" ]
run  = "shell --block 'pcmanfm .'"
desc = "Open GUI File Manager"

[[manager.prepend_keymap]]
on = "H"
run = "plugin duckdb -1"
desc = "Scroll one column to the left"

[[manager.prepend_keymap]]
on = "L"
run = "plugin duckdb +1"
desc = "Scroll one column to the right"

[[manager.prepend_keymap]]
on = "e"
run = "shell --confirm 'kitty .'"
desc = "Abrir Kitty en este directorio"
